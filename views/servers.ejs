<section class="page-form-ele page">

    <section class="panel panel-default">
        <div class="panel-heading"><strong><span class="glyphicon glyphicon-th"></span> <span i18n="search-a-server"></span></strong></div>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-6">
                    <input type="text" ng-model="selected" class="form-control" i18n="i18n-placeholder" placeholder="search">
                </div>
            </div>

            <table class="table" ng-init="seeMore()">
                <thead>
                    <tr>
                        <th i18n="name"></th>
                        <th i18n="status"></th>
                        <th i18n="players"></th>
                    </tr>
                </thead>
                <tbody infinite-scroll="seeMore()" infinite-scroll-parent infinite-scroll-container="'#content'" infinite-scroll-disabled="busy">
                    <tr ng-repeat="server in servers | filter:{ name: selected }">
                        <td><a href="/#/server/{{server.id}}" alt="{{server.name}}" ng-bind="server.name"></a></td>
                        <td ng-if="server.online"><span class="label label-success" i18n="online"></span></td>
                        <td ng-if="!server.online"><span class="label label-danger" i18n="offline"></span></td>
                        <td><div class="server-capacity" ng-bind="server.onlinePlayers + '/' + server.size"></div><progressbar class="progressbar-xs no-margin" ng-attr-value="server.onlinePlayers/server.size*100" type="success"></progressbar></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>

</section>
