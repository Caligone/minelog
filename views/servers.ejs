<section class="page-form-ele page" data-ng-controller="ServersListCtrl">

    <section class="panel panel-default">
        <div class="panel-heading"><strong><span class="glyphicon glyphicon-th"></span> Recherche d'un serveur</strong></div>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-6">
                    <input type="text"
                           ng-model="selected"
                           typeahead="serverName for serverName in serverNames | filter:$viewValue | limitTo:8"
                           class="form-control"
                           placeholder="Recherche">
                </div>
            </div>
        </div>
    </section>

  <table class="table">
      <thead>
          <tr>
              <th>Nom</th>
              <th>Status</th>
              <th>Joueurs</th>
          </tr>
      </thead>
      <tbody>
          <tr class="animate" ng-repeat="server in servers | filter:{ name: selected }">
              <td><a href="/#/server/{{server.id}}" alt="{{server.name}}">{{server.name}}</a></td>
              <td ng-if="server.online"><span class="label label-success">En ligne</span></td>
              <td ng-if="!server.online"><span class="label label-danger">Hors ligne</span></td>
              <td><div class="server-capacity">{{server.onlinePlayers}}/{{server.size}}</div><progressbar class="progressbar-xs no-margin" ng-attr-value="server.onlinePlayers/server.size*100" type="success"></progressbar></td>
          </tr>
      </tbody>
  </table>

</section>
