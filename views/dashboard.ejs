<div class="page page-dashboard">

    <div class="row">
      <div class="col-lg-3 col-xsm-6">
          <div class="panel mini-box">
              <span class="box-icon bg-info">
                  <i class="fa fa-users"></i>
              </span>
              <div class="box-info">
                  <p class="size-h2" ng-bind="counters.players"></p>
                  <p class="text-muted"><span i18n="active-players"></span></p>
              </div>
          </div>
      </div>
        <div class="col-lg-3 col-xsm-6">
            <div class="panel mini-box">
                <span class="box-icon bg-success">
                    <i class="fa fa-hdd-o"></i>
                </span>
                <div class="box-info">
                    <p class="size-h2" ng-bind="counters.servers"><span class="size-h4"></span></p>
                    <p class="text-muted"><span i18n="active-servers"></span></p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-xsm-6">
            <div class="panel mini-box">
                <span class="box-icon bg-danger">
                    <i class="fa fa-crosshairs"></i>
                </span>
                <div class="box-info">
                    <p class="size-h2" ng-bind="counters.kills"></p>
                    <p class="text-muted"><span i18n="victims"></span></p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-xsm-6">
            <div class="panel mini-box">
                <span class="box-icon bg-warning">
                    <i class="fa fa-square"></i>
                </span>
                <div class="box-info">
                    <p class="size-h2" ng-bind="counters.blocks"></p>
                    <p class="text-muted"><span i18n="mined-blocks"></span></p>
                </div>
            </div>
        </div>

    </div>

    <div class="row">
      <section class="panel panel-box">
        <div class="panel-body">
            <h2 i18n="pitch"></h3>
            <p><em>Caligone</em></p>
        </div>
      </section>
    </div>

    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading"><strong><span class="glyphicon glyphicon-th"></span> <span i18n="top-servers"></span></strong></div>
        <table class="table">
            <thead>
                <tr>
                    <th i18n="name"></th>
                    <th i18n="status"></th>
                    <th i18n="players"></th>
                </tr>
            </thead>
            <tbody>
                <tbody>
                <tr ng-repeat="server in servers" class="animate" >
                    <td><a href="/#/server/{{server.id}}" alt="{{server.name}}" ng-bind="server.name"></a></td>
                    <td ng-if="server.online"><span class="label label-success" i18n="online"></span></td>
                    <td ng-if="!server.online"><span class="label label-danger" i18n="offline"></span></td>
                    <td><div class="server-capacity" ng-bind="server.onlinePlayers+'/'+server.size"></div><progressbar class="progressbar-xs no-margin" ng-attr-value="server.onlinePlayers/server.size*100" type="success"></progressbar></td>
                </tr>
            </tbody>
            </tbody>
        </table>
      </div>
    </div>

    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading"><strong><span class="glyphicon glyphicon-th"></span> <span i18n="top-players"></span></strong></div>
        <table class="table">
            <thead>
                <tr>
                    <th i18n="pseudo"></th>
                    <th i18n="status"></th>
                    <th i18n="ratio"></th>
                    <th i18n="score"></th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="player in players" class="animate" >
                    <td><a href="/#/profile/{{player.id}}" alt="Profile {{player.pseudo}}" ng-bind="player.pseudo"></a></td>
                    <td ng-if="player.status"><span class="label label-success" i18n="online"></span></td>
                    <td ng-if="!player.status"><span class="label label-danger" i18n="offline"></span></td>
                    <td><em ng-bind="player.avgratio"><em></td>
                    <td><em ng-bind="player.score"><em></td>
                </tr>
            </tbody>
        </table>
      </div>
    </div>

</div>
