<section class="page-form-ele page" data-ng-controller="PlayersListCtrl">

    <section class="panel panel-default">
        <div class="panel-heading"><strong><span class="glyphicon glyphicon-th"></span> Recherche d'un joueur</strong></div>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-6">
                    <input type="text"
                           ng-model="selected"
                           typeahead="playerName for playerName in playerNames | filter:$viewValue | limitTo:8"
                           class="form-control"
                           placeholder="Recherche">
                </div>
            </div>
        </div>
    </section>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Pseudo</th>
                <th>Ratio</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="player in players | filter:{ pseudo: selected }">
                <td><span>{{player.pseudo}}</span></td>
                <td ng-if="player.online"><span class="label label-success">En ligne</span></td>
                <td ng-if="!player.online"><span class="label label-danger">Hors ligne</span></td>
                <td><em>{{player.avgRatio}}<em></td>
                <td><em>N/A (yet)<em></td>
            </tr>
    </tbody>
    </table>

</section>
