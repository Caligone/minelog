<section class="page-form-ele page">

    <!-- Typeahead -->
    <section class="panel panel-default">
        <div class="panel-heading"><strong><span class="glyphicon glyphicon-th"></span> Recherche d'un joueur</strong></div>
        <div class="panel-body" data-ng-controller="TypeaheadCtrl">
            <div class="row">
                <div class="col-sm-2">
                    <input type="text"
                           ng-model="selected"
                           typeahead="state for state in states | filter:$viewValue | limitTo:8"
                           class="form-control"
                           placeholder="Recherche">
                </div>
            </div
            <div class="callout callout-info">
                <p>Recherche actuelle : {{selected}}</p>
            </div>
        </div>
    </section>
    <!-- end Typeahead -->

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Pseudo</th>
                <th>Score</th>
            </tr>
        </thead>
